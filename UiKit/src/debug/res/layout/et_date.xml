<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView"
        style="@style/Typography.Matule.Caption.Regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Дата"
        android:visibility="gone"
        android:textColor="#7E7E9A"
      />

    <EditText
        android:id="@+id/et_edit_text"
        style="@style/Typography.Matule.Title2.Regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/et_stste_defualt"
        android:hint="--.--.----"
        android:padding="14dp"
        android:inputType="date"
        android:textColor="@color/black"
        android:textColorHint="@color/placeholder"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_editor_absoluteX="0dp"/>

    <TextView
        android:id="@+id/tvViewError"
        style="@style/Typography.Matule.Caption.Regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Дата"
        android:textColor="@color/error"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/et_edit_text"/>

</androidx.constraintlayout.widget.ConstraintLayout>
