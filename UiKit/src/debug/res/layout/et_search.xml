<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<TextView
    android:id="@+id/textView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Имя"
    android:visibility="gone"
    android:textColor="@color/diskripchn"/>

<EditText
    android:id="@+id/et_edit_text"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/Typography.Matule.Caption.Regular"
    android:layout_marginTop="8dp"
    android:background="@drawable/et_stste_defualt"
    android:textCursorDrawable="@drawable/et_state_cursor"
    android:paddingTop="14dp"
    android:paddingBottom="14dp"
    android:paddingRight="28dp"
    android:paddingLeft="42dp"
    android:textColor="@color/black"
    android:textColorHint="@color/diskripchn"
    app:layout_constraintTop_toBottomOf="@+id/textView"/>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="14dp"
        android:src="@drawable/ic_search"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"/>
    <ImageView
        android:id="@+id/bthClear"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="22dp"
        android:layout_marginRight="14dp"
        android:visibility="invisible"
        android:src="@drawable/ic_search_close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"/>

    <TextView
        android:id="@+id/tvViewError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="8dp"
        android:textColor="@color/error"
        app:layout_constraintTop_toBottomOf="@+id/et_edit_text"/>


</androidx.constraintlayout.widget.ConstraintLayout>