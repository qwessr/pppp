<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView"
        style="@style/Typography.Matule.Caption.Regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Пароль"
        android:visibility="visible"
        android:textColor="@color/diskripchn"
        />


    <EditText
        android:id="@+id/et_edit_text"
        style="@style/Typography.Matule.Caption.Regular"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/et_stste_defualt"
        android:inputType="textPassword"
        android:padding="14dp"
        android:paddingRight="40dp"
        android:textColor="@color/black"
            android:textColorHint="#939396"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_editor_absoluteX="0dp"
         />

    <ImageView
        android:id="@+id/bthPassword"
        style="@style/Typography.Matule.Headline.Regular"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="22dp"
        android:layout_marginRight="24dp"
        android:src="@drawable/ic_password_hide"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
         />

    <TextView
        android:id="@+id/tvViewError"
        style="@style/Typography.Matule.Caption.Regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Неверный пароль"
        android:textColor="@color/error"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/et_edit_text"
         />

</androidx.constraintlayout.widget.ConstraintLayout>
