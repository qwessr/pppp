<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvTextView"
        style="@style/Typography.Matule.Caption.Regular"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Имя"
        android:visibility="visible"
        android:textColor="#7E7E9A"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_edit_text"
        style="@style/Typography.Matule.Headline.Regular"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/et_stste_defualt"
        android:padding="14dp"
        android:hint="Введите текст"
        android:inputType="text"
        android:textColor="@color/black"
        android:textColorHint="@color/placeholder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTextView"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/tvViewError"
        style="@style/Typography.Matule.Caption.Regular"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Ошибка"
        android:textColor="#FD3535"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_edit_text" />

</androidx.constraintlayout.widget.ConstraintLayout>
